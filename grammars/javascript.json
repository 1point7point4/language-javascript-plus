{
	"scopeName": "source.js",
	"name": "JavaScriptPlus",
	"injectionSelector": "L:source.js",
	"patterns": [
		{ "include": "#ihtml" },
		{ "include": "#html" },
		{ "include": "#css" }
	],
	"repository": {
		"ihtml": {
			"begin": "\\.(innerHTML)\\s*(\\+?=)\\s*(`)",
			"beginCaptures": {
				"1": {
					"name": "variable.language.js"
				},
				"2": {
					"name": "keyword.operator.assignment.js"
				},
				"3": {
					"name": "punctuation.definition.string.begin.js"
				}
			},
			"end": "`",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.js"
				}
			},
			"patterns": [
				{
					"include": "#string_escapes"
				},
				{
					"include": "#interpolated_js"
				},
				{
					"include": "text.html.basic"
				}
			]
		},
		"html": {
			"begin": "((template|Template|TEMPLATE)|(html|Html|HTML))\\s*(:|=)\\s*(`)",
			"beginCaptures": {
				"4": {
					"name": "keyword.operator.assignment.js"
				},
				"5": {
					"name": "punctuation.definition.string.begin.js"
				}
			},
			"end": "`",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.js"
				}
			},
			"patterns": [
				{
					"include": "#string_escapes"
				},
				{
					"include": "#interpolated_js"
				},
				{
					"include": "text.html.basic"
				}
			]
		},
		"css": {
			"begin": "((style|Style|STYLE)|(css|Css|CSS))\\s*(:|=)\\s*(`)",
			"beginCaptures": {
				"4": {
					"name": "keyword.operator.assignment.js"
				},
				"5": {
					"name": "punctuation.definition.string.begin.js"
				}
			},
			"end": "`",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.js"
				}
			},
			"patterns": [
				{
					"include": "#string_escapes"
				},
				{
					"include": "#interpolated_js"
				},
				{
					"include": "source.css"
				}
			]
		}
	}
}
